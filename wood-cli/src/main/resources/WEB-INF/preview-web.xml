<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<display-name>${display-name}</display-name>
	<description>${description}</description>

	<context-param>
		<param-name>PROJECT_DIR</param-name>
		<param-value>${project-dir}</param-value>
	</context-param>

	<listener>
		<listener-class>js.wood.FileSystemWatcher</listener-class> 
	</listener>

	<filter>
		<filter-name>rmi-forward</filter-name>
		<filter-class>js.wood.ForwardFilter</filter-class>
		<init-param>
			<param-name>URL_PATTERNS</param-name>
			<param-value>*.rmi,*.xsp,*/captcha/image*,*/rest/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>rmi-forward</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>preview</servlet-name>
		<servlet-class>js.wood.PreviewServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>preview</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>events</servlet-name>
		<servlet-class>js.wood.EventsServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>events</servlet-name>
		<url-pattern>*.event</url-pattern>
	</servlet-mapping>

</web-app>
